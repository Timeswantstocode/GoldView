{
  "version": 2,
  "crons": [
    {
      "path": "/api/rates-history",
      "schedule": "0 0 * * *"
    }
  ],
  "framework": "vite",
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "goldview.tech"
        }
      ],
      "destination": "https://www.goldview.tech/$1",
      "permanent": true
    },
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "viewgold.vercel.app"
        }
      ],
      "destination": "https://www.goldview.tech/$1",
      "permanent": true
    },
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "www.viewgold.vercel.app"
        }
      ],
      "destination": "https://www.goldview.tech/$1",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}